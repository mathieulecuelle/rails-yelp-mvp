<div class="container" id="show">
  <div class="">
    <h1>Restaurant</h1>
    <%= link_to "Back to list", restaurants_path, class: "btn btn-info" %>
  </div>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORIES.sort %>
      <%= f.submit class: "btn btn-info" %>
    <% end %>
</div>
